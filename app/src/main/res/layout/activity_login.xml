<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo1"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="20dp" />

    <ImageView
        android:id="@+id/lg_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo1"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/customer" />

    <ImageView
        android:id="@+id/lg_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/lock" />


    <EditText
        android:id="@+id/username"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="47dp"
        android:fontFamily="@font/popmedium"
        android:hint="Username"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/popmedium"
        android:hint="Password"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_atau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="111dp"
        android:fontFamily="@font/popmedium"
        android:layout_below="@+id/password"
        android:text="ATAU"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_atau"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="9dp"
        android:backgroundTint="@color/white"
        android:text="Login dengan Google"
        android:textSize="14sp"
        android:fontFamily="@font/popsemibold"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/lg_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_atau"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/google" />

    <Button
        android:id="@+id/btn_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_google"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/popsemibold"
        android:layout_marginEnd="9dp"
        android:backgroundTint="@color/white"
        android:text="Login dengan Facebook"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/lg_fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_google"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/facebook" />

    <Button
        android:id="@+id/btn_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_fb"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/popsemibold"
        android:text="Login dengan Email"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/lg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_fb"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/gmail" />

    <TextView
        android:id="@+id/daftar_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_email"
        android:layout_marginStart="148dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/popmedium"
        android:text="Daftar Akun"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daftar_akun"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="73dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/popsemibold"
        android:text="Masuk"
        android:textColor="@color/black" />


</RelativeLayout>